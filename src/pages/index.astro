---
import BaseHead from '../components/BaseHead.astro';
import Body from '../components/Body.astro';
import Content from '../components/Content.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Masthead from '../components/Masthead.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
// notes: Home page and Posts page
const posts = await Astro.glob('../pages/posts_post/*.md');
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header title={SITE_TITLE} />
    <Masthead />
    <main>
      <!-- <div class="border border-sky-500 w-full h-8"></div> -->
      <Content>
        <section>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {
              posts.map((post) => {
                return (
                  <li class="text-center mb-4">
                    <a href={post.url}>
                      <img
                        src={post.frontmatter.heroImage as string}
                        alt=""
                        class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                        width={720 * 2}
                      />
                      <div class="mt-3 text-xl font-bold">{post.frontmatter.title}</div>
                      <div>{post.frontmatter.description}</div>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </section>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
